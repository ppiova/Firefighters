@model Firefighters.Web.Data.Entities.Area

@{
    ViewData["Title"] = "DETALLE";
}

<h4 >Detalle Area</h4>

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AreaName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AreaName)
        </dd>
        <dt class="col-sm-2">
            <a>LLEVA INVENTARIO</a>
        </dt>
        <dd class="col-sm-10">
            @if (Model.LlevaInventario == true)
            {<a>SI</a>}
            @if (Model.LlevaInventario == false)
            {<a>NO</a>}
        </dd>
    </dl>
</div>
<hr />
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.AreaID"><i class="fas fa-edit"></i>&nbsp;Editar </a>
    <a asp-action="Index" class="btn btn-info"><i class="fas fa-long-arrow-alt-left"></i>&nbsp;Volver Listado</a>
</div>

