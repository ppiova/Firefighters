@model IEnumerable<Firefighters.Web.Data.Entities.Elemento>

@{
    ViewData["Title"] = "Elementos No Activos";
}

<h2 class="text-center">ELEMENTOS NO ACTIVOS</h2>
@*TODO: ACOMODAR TABLA*@
<p>
    <a asp-action="Index">Volver a la Lista</a> 
    
</p>
<table id="myTableElementosNA" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ElementoID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NroSerie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observaciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BajaFecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area.AreaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ubicacion.UbicacionElemento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ElementoID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
         
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NroSerie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observaciones)
            </td>
            <td>
                @item.BajaFecha?.ToString("dd/MM/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area.AreaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ubicacion.UbicacionElemento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ElementoID">Editar</a> |
             
                <a asp-action="Delete" asp-route-id="@item.ElementoID">Eliminar</a>
            </td>
        </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
			$(document).ready(function () {
                $('#myTableElementosNA').DataTable();//myTable is the id of the table to be displayed as dataTable
			});
    </script>
}