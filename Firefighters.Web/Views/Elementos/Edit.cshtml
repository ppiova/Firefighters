@model Firefighters.Web.Models.ElementoViewModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Edición de Elemento</h4>
<hr />
<form asp-action="Edit">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ElementoID" />

    <partial name="_Elemento" />

    <div class="form-group">
        <div class="checkbox">
            <label>
                <input asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
            </label>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="BajaFecha" class="control-label"></label>
            <input asp-for="BajaFecha" class="form-control" />
            <span asp-validation-for="BajaFecha" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="GUARDAR" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
