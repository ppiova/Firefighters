@model Firefighters.Web.Models.ElementoViewModel

@{
    ViewData["Title"] = "Editar";
}

<h4>Edición de Elemento</h4>
<hr />
<form asp-action="Edit">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ElementoID" />

    <partial name="_Elemento" />

   
    @if (Model.BajaFecha != null)
    {<div class="form-row">
         <div class="form-group col-md-4">
             <a>Fecha Baja: </a>@Html.DisplayFor(modelItem => Model.BajaFecha)
         </div>

   
</div>}

<div class="form-group">
    @if (Model.BajaFecha == null)
    {
        <div class="form-group col-md-4"><input type="submit" asp-action="BajaLogica" asp-route-id="@Model.ElementoID" value="DAR BAJA" class="btn btn-danger btn-block " /></div>

        <div class="form-group col-md-4">
            <input type="submit" value="Guardar" class="btn btn-primary btn-user btn-block" />
        </div>
        <div class="col-md-4">
            <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fas fa-long-arrow-alt-left"></i>&nbsp;Volver Listado</a>
        </div>
    }
    @if (Model.BajaFecha != null)
    {
        <div class="form-group col-md-4">
            <input type="submit" asp-action="Activar" asp-route-id="@Model.ElementoID" value="ACTIVAR" class="btn btn-primary btn-user btn-block" />
        </div>
        <div class="col-md-4">
            <a asp-action="NoActivos" class="btn btn-secondary btn-block"><i class="fas fa-long-arrow-alt-left"></i>&nbsp;Volver Listado Bajas</a>
        </div>
    }


</div>
</form>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
