@model IEnumerable<Firefighters.Web.Data.Entities.Siniestro>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center">SINIESTROS</h2>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus-square"></i>&nbsp;Siniestro</a>

</p>
<table id="myTableSiniestros" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                Nro.
            </th>
            <th>
                Fecha / Hora
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emergencia.TipoEmergencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Denunciante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Damnificado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DirUbicación)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad.NombreLocalidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RutaKm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SiniestroID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaSiniestro) / @Html.DisplayFor(modelItem => item.HoraSiniestro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emergencia.TipoEmergencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Denunciante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Damnificado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DirUbicación)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad.NombreLocalidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RutaKm)
            </td>
            <td style="text-align:center">
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.SiniestroID"><i class="fas fa-edit"></i> </a>
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.SiniestroID"><i class="fas fa-receipt"></i> </a>
                <button data-id="@item.SiniestroID" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="fas fa-trash-alt"></i></button>
            </td>
        </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTableSiniestros').DataTable();

            // Delete item
            var item_to_delete;

            $('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;

            });

            $("#btnYesDelete").click(function () {
                window.location.href = '/Siniestros/Delete/' + item_to_delete;

            });
         
        });
    </script>
}
